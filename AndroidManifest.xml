<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stealthme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.SEND_SMS">
    </uses-permission>
    <uses-permission android:name="android.permission.RECEIVE_SMS">
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.stealthme.MessagingActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.stealthme.SettingsActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.NoActionBar">
        </activity>
        <activity
            android:name="com.example.stealthme.PasswordLoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.NoActionBar"
            android:noHistory="true">
        </activity>
        <activity
            android:name="com.example.stealthme.PinLoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.NoActionBar"
            android:noHistory="true">
        </activity>
        <receiver android:name="SmsReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
            </intent-filter>
        </receiver>
        <activity android:name="com.example.stealthme.StartupActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Holo.NoActionBar"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.stealthme.ThreadsActivity" android:label="@string/app_name" android:theme="@android:style/Theme.Holo.NoActionBar">
        </activity>
    </application>

</manifest>